
// Tutorial 17
// Setter and the "this" keywords


class Frog {
	String name;
	int age;
	
	// Setter Method, allows for encapsulation of internal class variables
	public void setName(String newName) {
		name = newName;
	}
	
	
	// Getter Methods, getting a value from an instance of an object
	public String getName() {
		return name;
	}
	
	public int getAge() {
		return age;
	}
	
}

public class App {
	
	public static void main(String[] args) {
		
		Frog frog1 = new Frog();
		
		// Here we are accessing the internal variables of the frog class
		// Setting instance variables
		frog1.name = "Bertie";
		frog1.age = 1;
		
		// Accessing a method of the frog1 object
		frog1.setName("Bertie");
		
		System.out.println(frog1.getName());
		
	}
	
}
